@model List<Bloggie.Models.Domain.Tag>;
@{

}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="">Show All Tags - Admin Function</h1>
    </div>
</div>
<div class="container py-5">
    @if ( Model != null && Model.Any() )
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>DisplayName</th>
                </tr>
            </thead>
            <tbody>
                @foreach ( var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="  text-dark">No Tags Found</p>
    }

</div>