@model List<Bloggie.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="">All BlogPosts - Admin Function</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null & Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Heading</td>
                    <td>Tags</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in post.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }

                            </div>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="AdminBlogPosts" asp-area="" asp-route-id="@post.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Blogs Found !</p>
    }
</div>